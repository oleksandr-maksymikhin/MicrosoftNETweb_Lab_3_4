@model TicketViewModel

@{
    ViewData["Title"] = "Add Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Add tickets to movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @*enctype="multipart/from-data"*@
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.Movies"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Row" class="control-label"></label>
                <input asp-for="Row" class="form-control" />
                <span asp-validation-for="Row" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                <input asp-for="Seat" class="form-control" />
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" value="open" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create tickets" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<p>
    <a asp-controller="Movies" asp-action="Create" class="btn btn-light border-info text-info">Create new movie</a>
</p>
